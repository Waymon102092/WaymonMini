.waymon_seat_top{
  margin-top: 20rpx;
  width: 96%;
  margin-left: 2%;
  height: 120rpx;
}
.waymon_seat_top_name{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.waymon_seat_top_time{
  display: flex;
  color: #999999;
}
.waymon_seat_top_time view{
  margin-right: 20rpx;
}

/*  */
.waymon_seat{
  margin-top: 40rpx;
  margin: 0;
  padding: 0;
}
/* screen */
.waymon_seating_screen {
  height: 30rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  overflow: hidden;
  margin-bottom: 10rpx;
}
.waymon_screen {
  margin-top: 0;
  padding: 0;
  height: 20vw;
  width: 100vw;
  box-sizing: border-box;
  border: 15rpx solid #c9cdd3;
  border-radius: 50%;
}
.visual_title {
  font-size: 23rpx;
  width: 100%;
  height: 20rpx;
  text-align: center;
  color: #6d6d6d;
  margin-bottom: 30rpx;
}

/* movable */
.seat{
  width: 30rpx;
  height: 30rpx;
  background: red;
}
.waymon_seatings_visual {
  margin-top: 50rpx;
  width: 100%;
  height: 80vw;
}
movable-area {
  width: 100%;
  height: 80vw;
}
movable-view {
  position: relative;
  width: 100%;
  height: 60vw;
}
.waymon_seat_cell {
  position: relative;
  width: 90%;
  margin-left: 6%;
  height: 80vw;
  overflow:hidden;
  box-sizing: border-box;
}
.waymon_seat_line{
  position: absolute;
  left: 50%;
  height: 100%;
  width: 1px;
  border-left: 1px dashed #999999;
}
.waymon_seat_item{
  height: 25px;
  width: 25px;
  margin-left: 10rpx;
  margin-bottom: 10px;
  float: left;
  border-radius: 2rpx;
}
.waymon_seat_item image{
  width: 25px;
  height: 25px;
}


/* number */
.waymon_seat_number{
  position: fixed;
  z-index: 99;
  top: 0;
  left: 5rpx;
  width: 30rpx;
  height: auto;
  background: rgb(0, 0, 0, 0.6);
  color: #fff;
  font-size: 26rpx;
  align-items: center;
  text-align: center;
  border-radius: 15rpx;
}
.waymon_seat_number_item{
  width: 30rpx;
  margin-bottom: 10px;
  text-align: center;
}


/* waymon_seat_intro */
.waymon_seat_intro{
  position: absolute;
  left: 0;
  bottom: 180px;
  width: 100%;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
}
.waymon_intro_item{
  display: flex;
  margin-right: 20rpx;
}
.waymon_intro_item view{
  color: #999999;
  font-size: 26rpx;
  margin-left: 10rpx;
  line-height: 40rpx;
}
.waymon_intro_item image{
  width: 40rpx;
  height: 40rpx;
}


/* waymon_seat_bottom */
.waymon_seat_bottom{
  position: absolute;
  left: 0;
  bottom:0;
  width: 100%;
  height: auto;
  background: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

/* waymon_seat_select */
.waymon_seat_select{
  margin-top: 20rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
}
.waymon_seat_select_item{
  margin-left: 20rpx;
  height: 100rpx;
  text-align: center;
  display: flex;
  background: #eee;
  border-radius: 10rpx;
}
.waymon_seat_select_left{
  margin-top: 10rpx;
  width: 75%;
  line-height: 40rpx;
  font-size: 26rpx;
}
.waymon_seat_select_right{
  width: 25%;
  line-height: 100rpx;
  font-size: 24rpx;
  text-align: center;
}

/*  */
.waymon_seat_phone{
  width: 90%;
  margin-left: 5%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 45rpx;
  color: #fff;
  background: linear-gradient(to right, #71E0E8, #6B87F4);
  font-size: 30rpx;
}