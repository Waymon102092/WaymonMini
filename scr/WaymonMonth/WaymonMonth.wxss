/* month */
.waymon_month{
  margin-top: 10rpx;
  height: 200rpx;
  width: 100%;
  background: linear-gradient(to right,#b8f0f4,#cbd4fa);
  overflow: hidden;
}
.waymon_month_top{
  margin-top: 60rpx;
  width: 94%;
  margin-left:3%;
  display: flex;
  font-size: 36rpx;
  line-height: 44rpx;
  font-weight: bold;
  color: #333333;
}
.waymon_month_top image{
  margin-top: 22rpx;
  width: 26rpx;
  height: 26rpx;
}
.waymon_month_top span{
  font-size: 60rpx;
}


/* date */
.waymon_month_title{
  height: 50px;
  line-height: 50px;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
}
.waymon_month_date{
  margin-top: 20px;
  margin-left: 10%;
  width: 80%;
}
.waymon_month_bottom{
  position: absolute;
  z-index: 999;
  width: 100%;
  height: 80px;
  bottom: 0;
  background: #fff;
  padding-top: 20rpx;
  padding-bottom: 0;
}
.waymon_month_confirm{
  width: 90%;
  margin-left: 5%;
  height: 44px;
  line-height: 44px;
  border-radius: 20px;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  background: linear-gradient(to right,#b8f0f4,#cbd4fa);
}